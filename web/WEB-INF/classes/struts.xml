    <constant name="struts.multipart.maxSize" value="10000000" />

    <package name="myPakage" namespace="/" extends="struts-default">

        <action name="upload" class="com.skincancersegmentation.ImageUpload" method ="imageProcess">
            <result name="success">successFileUpload.jsp</result>
            <result name="error">fileUploadError.jsp</result>
        </action>
        
        <!--<action name="loginurl" class="com.skincancersegmentation.loginActionClass" method="userLogin">-->
            <!--<result name="success">fileUpload.jsp</result>-->
            <!--<result name="error">loginError.jsp</result>-->
