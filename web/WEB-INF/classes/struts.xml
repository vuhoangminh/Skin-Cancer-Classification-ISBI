        <action name="forgetPWD" class="com.skincancersegmentation.ForgetPassword" method="sendPassword">
            <result name="success">forgetpasswordSuccess.jsp</result>
            <result name="error">forgetpasswordError.jsp</result>
        </action>

        <action name="createAcount" class="com.skincancersegmentation.createAccountActionClass" method="userAccountCreate">
            <result name="success">successAcountCreated.jsp </result>
